{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react",
        "strict": true,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "baseUrl": "assets",
        "paths": {
            "@/*": ["*"],
            "@/app/*": ["app/*"],
            "@/components/*": ["components/*"],
            "@/lib/*": ["lib/*"],
            "@/hooks/*": ["hooks/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["assets/app/types", "**/*.ts", "**/*.tsx"]
}
